{
  "$schema": "https://opencode.ai/config.json",
  "instructions": ["docs/agents/*.md"],
  "formatter": {
    "dotnet format": {
      "command": ["dotnet", "format", "--include", "$FILE"],
      "extensions": [".cs"]
    }
  },
  "keybinds": {
    "messages_half_page_up": "up",
    "messages_half_page_down": "down",
    "history_previous": "ctrl+up",
    "history_next": "ctrl+down"
  }
}
