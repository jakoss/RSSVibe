@using MudBlazor

@switch (Type)
{
    case "statistics":
        <MudGrid Spacing="2">
            @for (int i = 0; i < 4; i++)
            {
                <MudItem xs="12" sm="6" md="3">
                    <MudCard Class="mud-elevation-1">
                        <MudCardContent>
                            <div class="d-flex align-center justify-space-between">
                                <div style="flex: 1;">
                                    <MudSkeleton Width="30%" Height="40px" Class="mb-2" />
                                    <MudSkeleton Width="60%" Height="20px" />
                                </div>
                                <MudSkeleton Width="50px" Height="50px" SkeletonType="SkeletonType.Circle" />
                            </div>
                        </MudCardContent>
                    </MudCard>
                </MudItem>
            }
        </MudGrid>
        break;

    case "recentItems":
        <MudPaper Class="pa-6 mb-6">
            <MudSkeleton Width="20%" Height="30px" Class="mb-4" />
            
            @for (int i = 0; i < 5; i++)
            {
                <div class="mb-3">
                    <MudSkeleton Width="80%" Height="20px" Class="mb-2" />
                    <MudSkeleton Width="60%" Height="16px" />
                </div>
            }
        </MudPaper>
        break;

    case "pendingAnalyses":
        <MudPaper Class="pa-6 mb-6">
            <div class="d-flex align-center justify-space-between mb-4">
                <MudSkeleton Width="20%" Height="30px" />
                <MudSkeleton Width="30px" Height="30px" SkeletonType="SkeletonType.Circle" />
            </div>

            <MudGrid Spacing="2">
                @for (int i = 0; i < 2; i++)
                {
                    <MudItem xs="12" sm="6">
                        <MudCard>
                            <MudCardContent>
                                <MudSkeleton Width="70%" Height="20px" Class="mb-2" />
                                <MudSkeleton Width="50%" Height="20px" Class="mb-2" />
                                <MudSkeleton Width="40%" Height="16px" />
                            </MudCardContent>
                        </MudCard>
                    </MudItem>
                }
            </MudGrid>
        </MudPaper>
        break;

    case "full":
    default:
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-6">
            <MudGrid Spacing="2">
                @for (int i = 0; i < 4; i++)
                {
                    <MudItem xs="12" sm="6" md="3">
                        <MudCard Class="mud-elevation-1">
                            <MudCardContent>
                                <div class="d-flex align-center justify-space-between">
                                    <div style="flex: 1;">
                                        <MudSkeleton Width="30%" Height="40px" Class="mb-2" />
                                        <MudSkeleton Width="60%" Height="20px" />
                                    </div>
                                    <MudSkeleton Width="50px" Height="50px" SkeletonType="SkeletonType.Circle" />
                                </div>
                            </MudCardContent>
                        </MudCard>
                    </MudItem>
                }
            </MudGrid>

            <MudPaper Class="pa-6 mb-6 mt-6">
                <MudSkeleton Width="20%" Height="30px" Class="mb-4" />
                @for (int i = 0; i < 5; i++)
                {
                    <div class="mb-3">
                        <MudSkeleton Width="80%" Height="20px" Class="mb-2" />
                        <MudSkeleton Width="60%" Height="16px" />
                    </div>
                }
            </MudPaper>

            <MudPaper Class="pa-6">
                <MudSkeleton Width="20%" Height="30px" Class="mb-4" />
                <MudGrid Spacing="2">
                    @for (int i = 0; i < 3; i++)
                    {
                        <MudItem xs="12" sm="4">
                            <MudSkeleton Width="100%" Height="45px" />
                        </MudItem>
                    }
                </MudGrid>
            </MudPaper>
        </MudContainer>
        break;
}

@code {
    /// <summary>
    /// Type of skeleton to display: "statistics", "recentItems", "pendingAnalyses", or "full".
    /// Default is "full" for complete dashboard layout.
    /// </summary>
    [Parameter]
    public string Type { get; set; } = "full";
}
